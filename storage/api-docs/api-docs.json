                        "description": "Name of the commerce",
                        "type": "string",
                        "example": "TempoSolutions"
                    },
                    "number": {
                        "title": "number",
                        "description": "Nit of the Commerce",
                        "type": "string",
                        "example": "AB78546"
                    },
                    "description": {
                        "title": "description",
                        "description": "Description of the invoice",
                        "type": "string",
                        "example": "Description"
                    },
                    "dateStart": {
                        "title": "dateStart",
                        "description": "dateStart of the invoice",
                        "type": "string",
                        "example": "2020-01-20"
                    },
                    "dateEnd": {
                        "title": "dateEnd",
                        "description": "dateEnd of the invoice",
                        "type": "string",
                        "example": "2020-12-20"
                    },
                    "loop": {
                        "title": "loop",
                        "description": "loop of the invoice",
                        "type": "integer",
                        "example": "7"
                    },
                    "loopDate": {
                        "title": "loopDate",
                        "description": "loopDate of the invoice",
                        "type": "integer",
                        "example": "2020-12-25"
                    },
                    "loopDay": {
                        "title": "loopDay",
                        "description": "loopDay of the invoice",
                        "type": "integer",
                        "example": "1"
                    },
